{
  "gitSiteUrl": "https://github.com/universalappfactory/tauri-plugin-medialibrary/",
  "pkgManagers": {
    "javascript": {
      "version": true,
      "getPublishedVersion": {
        "use": "fetch:check",
        "options": {
          "url": "https://registry.npmjs.com/${ pkg.pkgFile.pkg.name }/${ pkg.pkgFile.version }"
        }
      },
      "publish": [
        {
          "command": "yarn build",
          "dryRunCommand": "yarn build"
        },
        {
          "command": "yarn publish --access public",
          "dryRunCommand": "yarn publish --access public --dry-run",
          "pipe": true
        }
      ]
    },
    "rust": {
      "version": true,
      "getPublishedVersion": {
        "use": "fetch:check",
        "options": {
          "url": "https://crates.io/api/v1/crates/${ pkg.pkgFile.pkg.package.name }/${ pkg.pkgFile.version }"
        }
      },
      "publish": [
        {
          "command": "echo '<details>\n<summary><em><h4>Cargo Publish</h4></em></summary>\n\n```'",
          "dryRunCommand": true,
          "pipe": true
        },
        {
          "command": "cargo publish --no-verify",
          "dryRunCommand": "cargo publish --dry-run",
          "pipe": true
        },
        {
          "command": "echo '```\n\n</details>\n'",
          "dryRunCommand": true,
          "pipe": true
        }
      ]
    }
  },
  "packages": {
    "tauri-plugin-medialibrary-js": {
      "path": "./",
      "manager": "javascript"
    },
    "tauri-plugin-medialibrary": {
      "path": "./",
      "manager": "rust"
    }
  }
}
